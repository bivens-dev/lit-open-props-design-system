:host {
    background: var(--yellow-6);
}

.yellow-badge {
  padding-inline: var(--size-3);
  border-width: var(--border-size-1);
  border-color: var(--yellow-6);
  color: var(--yellow-1);
  border-radius: var(--radius-round);

  @nest [data-theme="dim"] & {
    border-color: var(--orange-2);
    color: var(--orange-6);
  }
}